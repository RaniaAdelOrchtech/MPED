@model MPMAR.Web.Site.ViewModels.DynamicPageViewModel
@{
    ViewData["Title"] = ViewBag.PageTitle;
    string lang = Context.Request.Query["lang"];
    string langVal = lang == "en" ? "en" : "ar";
}

@Html.Raw(Model.HTMLPage)

    <script type="text/javascript">
        $(document).ready(function () {
           
            $('#SidebarDiv').load("/DynamicPage/SideBarComponant?lang=@langVal");
           
        });
    </script>