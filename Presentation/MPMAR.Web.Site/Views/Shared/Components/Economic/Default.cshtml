@model IEnumerable<MPMAR.Data.HomePageModels.EconomicDevelopment>
@{
    string lang = Context.Request.Query["lang"];
    string langVal = lang == "en" ? "en" : "ar";
    var modelData = Model.ToList();
    var readMore = "Read More";
}

<h3 class="animate-onscroll" style="color: #28A5A3;">
    @if (lang == null || lang == "" || lang == "ar")
    {
        @modelData[0].ArMainTitle
        readMore = "اقرأ المزيد";
    }
    else
    {
        @modelData[0].EnMainTitle

    }
</h3>


