@model MPMAR.Data.HomePageModels.Monitoring

@{
    string lang = Context.Request.Query["lang"];
    string langVal = lang == "en" ? "en" : "ar";
    string mainTitle = Model.EnMainTitle;

    string title2 = Model.EnTitle2;

    string description1 = Model.EnDescription1.Replace("<div>","").Replace("</div>","");
    string description2 = Model.EnDescription2.Replace("<div>", "").Replace("</div>", "");

    string readMore = "Read More";
    if (lang == null || lang == "" || lang == "ar")
    {
        mainTitle = Model.ArMainTitle;

        title2 = Model.ArTitle2;

        description1 = Model.ArDescription1.Replace("<div>", "").Replace("</div>", "");
        description2 = Model.ArDescription2.Replace("<div>", "").Replace("</div>", "");

        readMore = "اقرأ المزيد";
    }

}

<h3 class="animate-onscroll" style="color: #28A5A3;">@mainTitle </h3>

<div class="row" style="padding: 0 15px;">

    <div class="col-lg-12"
         style="background-image: url('@Model.BackGroundImage') ;background-position: center;background-repeat: no-repeat;background-size: cover;">
        <!-- Sidebar -->
        <div class="row slider-row" style="padding: 40px 40px">
            <div class="col-lg-6 col-md-6 col-sm-12">

                <!-- Banner Rotator -->
                <div class="banner-rotator animate-onscroll longmoilediv"
                     style="background-color: rgba(200, 150, 55, 0.89);height: 400px;padding: 6px;opacity: 1;">

                    <h1 style="text-align: center; color:#fff;">
                        @{

                            var langChar1 =@Model.Link1.Contains("?") ? "&" : "?";
                        }
                        <a href=@Model.Link1@(langChar1)lang=@langVal
                           style="text-align: center;">
                            <img src=@Model.Image1
                                 alt="Egypt's 2030 Vision" style="width: 25%;    box-shadow: 4px 0px 8px #3a373759;
										">
                        </a>
                    </h1>
                    <h2 style="text-align: center; color:#fff;font-size: 16px;line-height: 1.8;margin-top: -10px;"
                        class="fontonmobile">
                        <a href=@Model.Link1@(langChar1)lang=@langVal class="blackhover"
                           style="text-align: center;color:#fff;font-size: 16px;line-height: 1.8">
                            @Html.Raw(@description1)
                        </a>
                    </h2>

                </div>
                <!-- /Banner Rotator -->
            </div>
            <!-- /Sidebar -->

            <div class="col-lg-6 col-md-6 col-sm-12">

                <!-- Banner Rotator -->
                <div class="banner-rotator animate-onscroll longmoilediv"
                     style="background-color: rgba(40, 165, 163, 0.89);height: 400px;padding: 18px;opacity: 1;">

                    <h1 style="text-align: center; color:#fff;   margin-top: 64px;">
                        @{

                            var langChar2 = @Model.Link2.Contains("?") ? "&" : "?";
                        }
                        <a href=@Model.Link2@(langChar2) lang=@langVal style="text-align: center; color:#fff">
                            @title2
                    </a>
                    </h1>
                    <h2 style="text-align: center; color:#fff;font-size: 16px;line-height: 1.8;margin-top: 56px;"
                        class="fontonmobile">
                        <a href=@Model.Link2@(langChar2)lang=@langVal class="blackhover"
                           style="text-align: center;color:#fff;font-size: 16px;line-height: 1.8">@Html.Raw(@description2) 
                        </a>
                    </h2>

                </div>
                <!-- /Banner Rotator -->
            </div>
        </div>
    </div>

</div>