@model PageNewsTypeCreateViewModel
@{
    ViewBag.Title = "News Type";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div>
    <h4>Definitions > <a asp-controller="PageNewsType" asp-action="Index">News Type </a> > Add </h4>
</div>

<form asp-controller="PageNewsType" asp-action="Create" method="post" class="mt-3" onsubmit="DisableAfterClick(event,this)">
    @Html.HiddenFor(m => m.NewsType.Id)
    <div class="form-group row">
        <label asp-for="NewsType.EnName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewsType.EnName" class="form-control" placeholder="English Name" />
            <span asp-validation-for="NewsType.EnName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="NewsType.ArName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewsType.ArName" class="form-control" placeholder="Arabic Name" />
            <span asp-validation-for="NewsType.ArName" class="text-danger"></span>
        </div>
    </div>
    <div class="item form-group">
        <div class="col-md-6 col-sm-6 offset-md-2">
            <button name="submit" type="submit" class="btn btn-success">Submit</button>
            <a asp-controller="PageNewsType" asp-action="Index" type="button" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

