@model MPMAR.Business.Services.Analytics.ViewModels.ComponentFormViewModel
@using MPMAR.Analytics.Data.Enums;
@{
    ViewData["Title"] = "Add Component " + ViewBag.Component;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4>Definitions > Economic Indicators > Component > <a asp-controller="Component" asp-action="Index" asp-route-sheetType="@ViewBag.ComponentEnum"> @ViewBag.Component</a> > Add </h4>
</div>


<form enctype="multipart/form-data" asp-controller="Component" asp-action="Create" asp-route-sheetType="@ViewBag.ComponentEnum" method="post" class="mt-3 ml-5" onsubmit="DisableAfterClick(event,this)">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Indicator</label>
        <div class="col-sm-5">
            <input value="@ViewBag.Indicator" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Source</label>
        <div class="col-sm-5">
            <input value="@ViewBag.Source" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Unit</label>
        <div class="col-sm-5">
            <input value="@ViewBag.Unit" readonly class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Fiscal Year</label>
        <div class="col-md-5 col-sm-5 ">
            @Html.DropDownList("DFYearFiscalId", null, "Select Fiscal Year", htmlAttributes: new { @class = "form-control" })
            <span asp-validation-for="@Model.DFYearFiscalId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Quarter</label>
        <div class="col-md-5 col-sm-5">
            @Html.DropDownList("DFQuarterId", null, "Select Quarter", htmlAttributes: new { @class = "form-control" })
            <span asp-validation-for="@Model.DFQuarterId" class="text-danger"></span>
        </div>
    </div>





    <div class="form-group row">
        <label asp-for="@Model.PrivateConsumption" class="col-sm-3 col-form-label">
            Private Consumption
        </label>
        <div class="col-sm-5">
            <input asp-for="@Model.PrivateConsumption" type="number" class="form-control" step="any" />
            <span asp-validation-for="@Model.PrivateConsumption" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="@Model.GovernmentConsumption" class="col-sm-3 col-form-label">
            Government Consumption
        </label>
        <div class="col-sm-5">
            <input asp-for="@Model.GovernmentConsumption" type="number" class="form-control"  step="any"/>
            <span asp-validation-for="@Model.GovernmentConsumption" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.GrossCapitalFormation" class="col-sm-3 col-form-label">
            Gross Capital Formation
        </label>
        <div class="col-sm-5">
            <input asp-for="@Model.GrossCapitalFormation" type="number" class="form-control" step="any"/>
            <span asp-validation-for="@Model.GrossCapitalFormation" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.ExportsOfGoodsAndServices" class="col-sm-3 col-form-label">
            Exports Of Goods And Services
        </label>
        <div class="col-sm-5">
            <input asp-for="@Model.ExportsOfGoodsAndServices" type="number" class="form-control" step="any"/>
            <span asp-validation-for="@Model.ExportsOfGoodsAndServices" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.ImportsOfGoodsAndServices" class="col-sm-3 col-form-label">
            Imports Of Goods And Services
        </label>
        <div class="col-sm-5">
            <input asp-for="@Model.ImportsOfGoodsAndServices" type="number" class="form-control" step="any"/>
            <span asp-validation-for="@Model.ImportsOfGoodsAndServices" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.TotalGrossDomesticProductAtMarketPrices" class="col-sm-3 col-form-label">
            Total GrossDomestic Product A tMarket Prices
        </label>
        <div class="col-sm-5">
            <input asp-for="@Model.TotalGrossDomesticProductAtMarketPrices" type="number" class="form-control" step="any"/>
            <span asp-validation-for="@Model.TotalGrossDomesticProductAtMarketPrices" class="text-danger"></span>
        </div>
    </div>





    <div class="item form-group">
        <div class="col-md-6 col-sm-6 offset-md-2">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-controller="Component" asp-action="Index" asp-route-sheetType="@ViewBag.ComponentEnum" type="button" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>