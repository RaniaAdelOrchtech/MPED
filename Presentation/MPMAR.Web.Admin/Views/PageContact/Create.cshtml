            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ArAddress" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ArAddress" class="form-control" placeholder="Arbic Address" />
