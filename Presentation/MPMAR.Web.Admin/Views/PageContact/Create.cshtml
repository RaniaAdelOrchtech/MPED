@model PageContactEditViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    @*<h1>Create Page Contact</h1>*@

    <div>
        <h4><a asp-controller="PageContact" asp-action="Index">Page Contact Details</a> > Add</h4>
    </div>

    <form enctype="multipart/form-data" asp-controller="PageContact" asp-action="Create" method="post" class="mt-3" onsubmit="DisableAfterClick(event,this)">
        <input asp-for="PageRouteVersionId" type="hidden" />

        <div class="form-group row">
            <label asp-for="EnMapTitle" class="col-sm-2 col-form-label"></label>
