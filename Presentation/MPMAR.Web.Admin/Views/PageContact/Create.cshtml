        <div class="form-group row">
            <label asp-for="ArMapTitle" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ArMapTitle" class="form-control" placeholder="Arbic Map Title" />
                <span asp-validation-for="ArMapTitle" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="MapUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MapUrl" class="form-control" placeholder="Map Url" />
