
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div>
    <h4>Contact Us > Contact Us Form</h4>
</div>
<table id="table_id" class="table table-striped table-bordered" style="width:155%">
    <thead>
        <tr>
            <th style="width: 0%" hidden>Id</th>
            <th style="width: 10%">First Name</th>
            <th style="width: 10%">Second Name</th>
            <th style="width: 10%">Phone Number</th>
            <th style="width: 15%">Email</th>
            <th style="width: 5%">Topic</th>
            <th style="width: 15%">Message</th>
            <th style="width: 5%">Region</th>
            <th style="width: 5%">City</th>
            <th style="width: 5%">Postal Number</th>
            <th style="width: 10%">Address</th>
            <th style="width: 10%">Sent Date</th>

        </tr>
    </thead>
</table>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable({
                "scrollX": true,
                     "order": [[ 11, "desc" ]],
                "ajax": { "url": '@Url.Action("GetContactData", "ContactUS")', "dataSrc": "data" },
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ],
                "columns": [
                    { "data": "id" ,render:  $.fn.dataTable.render.ellipsis()},
                    { "data": "firstName",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "secondName",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "phoneNumber",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "email",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "topic",render:  $.fn.dataTable.render.ellipsis() },
                      { "data": "message",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "region" ,render:  $.fn.dataTable.render.ellipsis()},
                    { "data": "city",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "postalNumber" ,render:  $.fn.dataTable.render.ellipsis()},
                    { "data": "address",render:  $.fn.dataTable.render.ellipsis() },
                    { "data": "creationDate" ,render:  $.fn.dataTable.render.ellipsis()},

                ]
            });
        });
    </script>
}

